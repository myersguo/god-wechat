.container {
    padding: 40rpx;
    min-height: 100vh;
    background: linear-gradient(135deg, #4a90e2 0%, #7b68ee 100%);
  }
  
  .header {
    text-align: center;
    margin-bottom: 30rpx;
  }
  
  .title {
    display: block;
    font-size: 48rpx;
    color: white;
    font-weight: bold;
    margin-bottom: 5rpx;
  }
  
  .subtitle {
    display: block;
    font-size: 28rpx;
    color: rgba(255, 255, 255, 0.8);
  }
  
  .dream-selection {
    margin-bottom: 20rpx;
  }
  
  .selection-title {
    text-align: center;
    margin-bottom: 40rpx;
  }
  
  .selection-text {
    display: block;
    font-size: 36rpx;
    color: white;
    font-weight: bold;
    margin-bottom: 10rpx;
  }
  
  .selection-desc {
    display: block;
    font-size: 26rpx;
    color: rgba(255, 255, 255, 0.7);
  }
  
  .dream-options {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20rpx;
    margin-bottom: 30rpx;
  }
  
  .option-icon {
    display: block;
    font-size: 40rpx;
    margin-bottom: 10rpx;
  }
  
  .option-name {
    display: block;
    color: white;
    font-size: 26rpx;
    font-weight: 500;
  }
  
  .custom-dream {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 20rpx;
    padding: 20rpx;
    backdrop-filter: blur(10rpx);
    border: 2rpx solid rgba(255, 255, 255, 0.2);
    margin-bottom: 20rpx;
  }
  
  .input-title {
    margin-bottom: 20rpx;
  }
  
  .input-title text {
    color: white;
    font-size: 30rpx;
    font-weight: bold;
  }
  
  .dream-input {
    width: 100%;
    min-height: 200rpx;
    background: rgba(255, 255, 255, 0.9);
    border-radius: 12rpx;
    padding: 20rpx;
    font-size: 28rpx;
    line-height: 1.6;
    box-sizing: border-box;
  }
  
  .input-count {
    text-align: right;
    margin-top: 10rpx;
    color: rgba(255, 255, 255, 0.7);
    font-size: 24rpx;
  }
  
  .analyze-btn {
    background: linear-gradient(45deg, #ff6b35, #f7931e);
    color: white;
    border: none;
    border-radius: 50rpx;
    padding: 25rpx 80rpx;
    font-size: 32rpx;
    font-weight: bold;
    box-shadow: 0 8rpx 25rpx rgba(255, 107, 53, 0.4);
  }
  
  .analyze-btn:disabled {
    background: rgba(255, 255, 255, 0.3);
    color: rgba(255, 255, 255, 0.6);
    box-shadow: none;
  }
  
  .analyze-btn.loading {
    background: linear-gradient(45deg, #ffa726, #ff9800);
  }
  
  .result-container {
    margin-bottom: 40rpx;
  }
  
  .result-card {
    background: white;
    border-radius: 20rpx;
    padding: 40rpx;
    box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  }
  
  .dream-description, .dream-category, .traditional-section, 
  .psychology-section, .advice-section {
    margin-bottom: 35rpx;
    padding-bottom: 30rpx;
    border-bottom: 2rpx solid #f0f0f0;
  }
  
  .advice-section {
    border-bottom: none;
    margin-bottom: 0;
    padding-bottom: 0;
  }
  
  .desc-header, .category-header, .section-header {
    display: flex;
    align-items: center;
    margin-bottom: 20rpx;
  }
  
  .desc-icon, .category-icon, .section-icon {
    font-size: 32rpx;
    margin-right: 15rpx;
  }
  
  .desc-title, .category-title, .section-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
  }
  
  .desc-content, .category-content, .traditional-content, 
  .psychology-content, .advice-content {
    font-size: 28rpx;
    line-height: 1.8;
    color: #555;
    text-align: justify;
  }
  
  .category-content {
    background: linear-gradient(45deg, #667eea, #764ba2);
    color: white;
    padding: 10rpx 20rpx;
    border-radius: 20rpx;
    display: inline-block;
    font-weight: bold;
  }
  
  .retry-container {
    display: flex;
    justify-content: center;
  }
  
  .retry-btn {
    background: linear-gradient(45deg, #667eea, #764ba2);
    color: white;
    border: none;
    border-radius: 50rpx;
    padding: 20rpx 60rpx;
    font-size: 32rpx;
    font-weight: bold;
  }
  
  .retry-btn:active {
    transform: scale(0.95);
  }

.divider {
    display: flex;
    align-items: center;
    margin: 30rpx 0;
  }
  
  .divider-line {
    flex: 1;
    height: 2rpx;
    background: rgba(255, 255, 255, 0.3);
  }
  
  .divider-text {
    margin: 0 30rpx;
    color: rgba(255, 255, 255, 0.7);
    font-size: 26rpx;
  }
  
  .loading-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 400rpx;
  }
  
  .loading-content {
    text-align: center;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 20rpx;
    padding: 60rpx 40rpx;
    backdrop-filter: blur(10rpx);
    border: 2rpx solid rgba(255, 255, 255, 0.2);
  }
  
  .loading-spinner {
    width: 80rpx;
    height: 80rpx;
    border: 6rpx solid rgba(255, 255, 255, 0.3);
    border-top: 6rpx solid white;
    border-radius: 50%;
    margin: 0 auto 30rpx;
    animation: spin 1s linear infinite;
  }
  
  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }
  
  .loading-text {
    display: block;
    color: white;
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 15rpx;
  }
  
  .loading-desc {
    display: block;
    color: rgba(255, 255, 255, 0.8);
    font-size: 26rpx;
  }
  
  
  .dream-option {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 16rpx;
    padding: 30rpx 20rpx;
    text-align: center;
    backdrop-filter: blur(10rpx);
    border: 2rpx solid rgba(255, 255, 255, 0.2);
    transition: all 0.3s ease;
  }
  
  .dream-option:active {
    transform: scale(0.95);
    background: rgba(255, 255, 255, 0.2);
    border-color: rgba(255, 255, 255, 0.4);
  }
  
  .analyze-container {
    display: flex;
    justify-content: center;
    animation: fadeInUp 0.3s ease-out;
    margin-top: 20rpx;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30rpx);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }